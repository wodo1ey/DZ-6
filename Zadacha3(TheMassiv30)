#include "pt4.h"
using namespace std;

void Solve()
{
    Task("TheMassiv30");
    int n;
    int j = 0;
    pt >> n;
    int* x;
    x = new int[n];
    for (int i = 0; i < n; i++) pt >> *(x + i);
    for (int i = (n - 1); i > 0; i--) {
        if (n < 3) pt << 0;
        else if (i != (n - 1)) {
            if ((*(x + i - 1) < *(x + i)) && (*(x + i) > *(x + i + 1))) {
                pt << i;
                i--;
                j++;
            }
        }
    }
    pt << j;
}
